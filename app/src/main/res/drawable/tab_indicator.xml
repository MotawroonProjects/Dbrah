<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <inset android:insetLeft="8dp" android:insetRight="8dp">
            <shape android:shape="rectangle">
                <corners android:radius="30dp"/>
                <stroke android:color="@color/color3" android:width="1dp"/>
                <solid android:color="@color/color2"/>
            </shape>
        </inset>

    </item>

    <item>
        <inset android:insetLeft="8dp" android:insetRight="8dp">
            <shape android:shape="rectangle">
                <corners android:radius="30dp"/>
                <stroke android:color="@color/grey7" android:width="1dp"/>
                <solid android:color="@color/grey4"/>
            </shape>
        </inset>

    </item>
</selector>