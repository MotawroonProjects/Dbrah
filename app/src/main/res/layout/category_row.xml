<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="lang"
            type="String" />
        <variable
            name="model"
            type="com.apps.dbrah.model.CategoryDataModel.CategoryModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_stroke_gray12"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20sp"
            android:layout_gravity="top"
            android:textSize="16sp"
            android:text='@{lang.equals("ar")?model.title_ar:model.title_en}'
            android:textColor="@color/black"
            android:fontFamily="@font/font_regular"/>
        <ImageView
            android:id="@+id/img"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:src="@drawable/saudi_arabia"
            image="@{model.image}"
            android:padding="1dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="53dp"
            android:layout_marginStart="63dp"
            />
    </LinearLayout>
</layout>